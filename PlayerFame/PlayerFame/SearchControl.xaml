<UserControl x:Class="PlayerFame.SearchControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlayerFame"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Black">
        <ComboBox IsEditable="True" Name="SearchBox" ItemsSource="{Binding Players}" Height="40" FontSize="20" SelectionChanged="ComboBox_SelectionChanged" Margin="20,20,20,20"/>
    </Grid>
</UserControl>
